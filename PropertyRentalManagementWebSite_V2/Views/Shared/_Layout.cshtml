<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mari Marques</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Mari Marques", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (ViewContext.HttpContext.User.IsInRole("Tenant"))
                    {
                        <li>@Html.ActionLink("Properties", "Show", "Apartments")</li>
                        <li>@Html.ActionLink("Appointment", "Index", "Appointments")</li>
                        <li>@Html.ActionLink("Message", "Index", "Messages")</li>
                    }
                    else if (ViewContext.HttpContext.User.IsInRole("Manager"))
                    {
                        <li>@Html.ActionLink("Buildings", "Index", "Buildings")</li>
                        <li>@Html.ActionLink("Apartments", "Index", "Apartments")</li>
                        <li>@Html.ActionLink("Appointments", "Index", "Appointments")</li>
                        <li>@Html.ActionLink("Messages", "Index", "Messages")</li>
                    }
                    else if (ViewContext.HttpContext.User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Employees", "Index", "Employees")</li>
                        <li>@Html.ActionLink("Tenants", "Index", "Tenants")</li>
                        <li>@Html.ActionLink("Buildings", "Index", "Buildings")</li>
                        <li>@Html.ActionLink("Properties", "Index", "Apartments")</li>
                        <li>@Html.ActionLink("Appointments", "Index", "Appointments")</li>
                        <li>@Html.ActionLink("Messages", "Index", "Messages")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Properties", "Show", "Apartments")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="main">
            <div class="container">
                
                    @RenderBody()

                    <!--  <hr />
        <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>-->
               
            </div>
        </div>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/main.js")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
